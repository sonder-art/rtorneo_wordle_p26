# Prevent merge conflicts on generated files
results/** merge=ours
**/results/** merge=ours

# Mark binary files
*.png binary
*.jpg binary
*.pdf binary
*.pkl binary
*.npy binary
*.npz binary
*.h5 binary
*.csv text

# Normalize line endings for Python
*.py text eol=lf
*.md text eol=lf
*.txt text eol=lf
*.html text eol=lf
*.css text eol=lf
*.js text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.json text eol=lf
